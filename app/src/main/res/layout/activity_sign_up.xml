<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".activities.SignUpActivity">

  <ScrollView
    android:id="@+id/scrollSignUp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="24dp"
      android:paddingEnd="24dp">

      <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/pretendard_bold"
        android:lineSpacingExtra="3dp"
        android:paddingTop="74dp"
        android:text="반가워요! 🐶 🐱\n펫다이어리\n회원가입을 해주세요"
        android:textColor="@color/gray_8"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          tools:ignore="UselessParent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:labelFor="@id/inputEmail"
            android:text="@string/inputEmail"
            android:textColor="@color/label"
            android:textSize="16sp" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
              android:id="@+id/inputEmail"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:autofillHints="emailAddress"
              android:background="@drawable/underline"
              android:fontFamily="@font/pretendard_regular"
              android:inputType="textEmailAddress"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
              android:id="@+id/deleteInputEmail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/transparent"
              android:contentDescription="@string/btn_delete"
              android:src="@drawable/ic_cancel"
              android:visibility="invisible"
              app:layout_constraintBottom_toBottomOf="@id/inputEmail"
              app:layout_constraintEnd_toEndOf="parent"
              tools:visibility="visible" />

            <TextView
              android:id="@+id/noticeEmail"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/pretendard_regular"
              android:textColor="@color/error"
              android:textSize="13sp"
              android:visibility="invisible"
              app:layout_constraintTop_toBottomOf="@id/inputEmail"
              tools:text="*error msg"
              tools:visibility="visible" />
          </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="20sp"
          tools:ignore="UselessParent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:labelFor="@id/inputId"
            android:text="아이디 입력"
            android:textColor="@color/label"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
              android:id="@+id/inputId"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:autofillHints="name"
              android:background="@drawable/underline"
              android:fontFamily="@font/pretendard_regular"
              android:inputType="text"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
              android:id="@+id/deleteInputId"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/transparent"
              android:contentDescription="@string/btn_delete"
              android:src="@drawable/ic_cancel"
              android:visibility="invisible"
              app:layout_constraintBottom_toBottomOf="@id/inputId"
              app:layout_constraintEnd_toEndOf="parent"
              tools:visibility="visible" />

            <TextView
              android:id="@+id/noticeId"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/pretendard_regular"
              android:textColor="@color/error"
              android:textSize="13sp"
              android:visibility="invisible"
              app:layout_constraintTop_toBottomOf="@id/inputId"
              tools:text="*error msg"
              tools:visibility="visible" />
          </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="20sp"
          tools:ignore="UselessParent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:labelFor="@id/inputPw"
            android:text="비밀번호 입력"
            android:textColor="@color/label"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
              android:id="@+id/inputPw"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:autofillHints="password"
              android:background="@drawable/underline"
              android:fontFamily="@font/pretendard_regular"
              android:inputType="textPassword"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
              android:id="@+id/deleteInputPw"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/transparent"
              android:contentDescription="@string/btn_delete"
              android:src="@drawable/ic_cancel"
              android:visibility="invisible"
              app:layout_constraintBottom_toBottomOf="@id/inputPw"
              app:layout_constraintEnd_toEndOf="parent"
              tools:visibility="visible" />

            <TextView
              android:id="@+id/noticePw"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/pretendard_regular"
              android:textColor="@color/error"
              android:textSize="13sp"
              android:visibility="invisible"
              app:layout_constraintTop_toBottomOf="@id/inputPw"
              tools:text="*error msg"
              tools:visibility="visible" />
          </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingTop="20sp"
          tools:ignore="UselessParent">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/pretendard_regular"
            android:labelFor="@id/inputPwChk"
            android:text="비밀번호 확인"
            android:textColor="@color/label"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
              android:id="@+id/inputPwChk"
              android:layout_width="match_parent"
              android:layout_height="46dp"
              android:autofillHints="password"
              android:background="@drawable/underline"
              android:fontFamily="@font/pretendard_regular"
              android:inputType="textPassword"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
              android:id="@+id/deleteInputPwChk"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:backgroundTint="@android:color/transparent"
              android:contentDescription="@string/btn_delete"
              android:src="@drawable/ic_cancel"
              android:visibility="invisible"
              app:layout_constraintBottom_toBottomOf="@id/inputPwChk"
              app:layout_constraintEnd_toEndOf="parent"
              tools:visibility="visible" />

            <TextView
              android:id="@+id/noticePwChk"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:fontFamily="@font/pretendard_regular"
              android:textColor="@color/error"
              android:textSize="13sp"
              android:visibility="invisible"
              app:layout_constraintTop_toBottomOf="@id/inputPwChk"
              tools:text="*error msg"
              tools:visibility="visible" />
          </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
      </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>

  <LinearLayout
    android:id="@+id/btnNextPage"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:background="@color/main"
    android:gravity="center"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/pretendard_bold"
      android:text="@string/next_page"
      android:textColor="@color/white"
      android:textSize="18sp" />

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:contentDescription="@string/next_page"
      android:src="@drawable/ic_paw" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>