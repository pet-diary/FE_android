<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.google.android.material.tabs.TabLayout
      android:id="@+id/communityTab"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10sp"
      android:paddingTop="25sp"
      app:tabIconTint="@color/main"
      app:tabIndicatorHeight="0dp"
      app:tabInlineLabel="true"
      app:tabSelectedTextColor="@color/gray_9"
      app:tabTextAppearance="@style/tab_font_style"
      app:tabTextColor="@color/gray_3" />

    <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/communityContent"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1" />
  </LinearLayout>

  <LinearLayout
    android:id="@+id/btnFloatWrite"
    android:layout_width="60sp"
    android:layout_height="60sp"
    android:layout_marginEnd="27sp"
    android:layout_marginBottom="24sp"
    android:background="@drawable/btn_float"
    android:elevation="11sp"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <ImageView
      android:layout_width="22dp"
      android:layout_height="22dp"
      android:contentDescription="@string/float_write"
      android:src="@drawable/ic_float_paw" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="3dp"
      android:fontFamily="@font/pretendard_regular"
      android:text="@string/float_write"
      android:textColor="@color/btn_float_text"
      android:textSize="10sp"
      tools:ignore="SmallSp" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>