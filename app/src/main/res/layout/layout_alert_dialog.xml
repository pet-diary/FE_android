<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="181dp"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="9dp"
        android:paddingEnd="12dp"
        android:paddingBottom="9dp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/alertDialogText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@id/alertDialogUtils"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="확인하시겠습니까?" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/alertDialogUtils"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:layout_marginEnd="-6dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="1"
                    android:background="@drawable/btn_35r_main"
                    android:fontFamily="@font/pretendard_bold"
                    android:maxWidth="174dp"
                    android:text="@string/cancel" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:paddingStart="6dp"
                android:paddingEnd="6dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:background="@drawable/bg_35r_main"
                    android:backgroundTint="@null"
                    android:fontFamily="@font/pretendard_bold"
                    android:maxWidth="174dp"
                    android:text="@string/confirm"
                    android:textColor="@color/white" />
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </LinearLayout>
</RelativeLayout>