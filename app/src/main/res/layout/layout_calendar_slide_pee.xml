<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/bg_underline"
  android:orientation="vertical"
  android:paddingStart="23sp"
  android:paddingTop="5sp"
  android:paddingEnd="23sp"
  android:paddingBottom="24sp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40sp"
    android:gravity="center">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:contentDescription="@string/calender_record_item"
      android:src="@drawable/ic_calendar_pee" />

    <TextView
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="8sp"
      android:layout_weight="1"
      android:fontFamily="@font/pretendard_bold"
      android:letterSpacing="-0.041"
      android:text="@string/pee"
      android:textColor="@color/gray_9"
      android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatImageButton
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:background="@null"
      android:src="@drawable/ic_arrow_top" />
  </LinearLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6sp">

    <LinearLayout
      android:id="@+id/peeOption1"
      android:layout_width="wrap_content"
      android:layout_height="34dp"
      android:background="@drawable/btn_35r_outline"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UselessParent">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#fff488" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:text="투명색"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/peeOption2"
      android:layout_width="wrap_content"
      android:layout_height="34dp"
      android:layout_marginStart="8sp"
      android:background="@drawable/btn_35r_outline"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      app:layout_constraintStart_toEndOf="@id/peeOption1"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UselessParent">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#fadb6f" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:text="진노란색"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/peeOption3"
      android:layout_width="wrap_content"
      android:layout_height="34dp"
      android:layout_marginStart="8sp"
      android:background="@drawable/btn_35r_outline"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      app:layout_constraintStart_toEndOf="@id/peeOption2"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UselessParent">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#f2982e" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:text="진한 주황색"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6sp">

    <LinearLayout
      android:id="@+id/peeOption4"
      android:layout_width="wrap_content"
      android:layout_height="34dp"
      android:background="@drawable/btn_35r_outline"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UselessParent">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#6fd986" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:text="초록색"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/peeOption5"
      android:layout_width="wrap_content"
      android:layout_height="34dp"
      android:layout_marginStart="8sp"
      android:background="@drawable/btn_35r_outline"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      app:layout_constraintStart_toEndOf="@id/peeOption4"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UselessParent">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#8f6e60" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:text="진한 갈색"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/peeOption6"
      android:layout_width="wrap_content"
      android:layout_height="34dp"
      android:layout_marginStart="8sp"
      android:background="@drawable/btn_35r_outline"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp"
      app:layout_constraintStart_toEndOf="@id/peeOption5"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UselessParent">

      <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="#ee6161" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="8sp"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:text="혈뇨"
        android:textColor="@color/gray_9"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>