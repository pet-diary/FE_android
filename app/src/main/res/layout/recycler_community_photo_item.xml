<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:paddingStart="23sp"
  android:paddingTop="18sp"
  android:paddingEnd="23sp">

  <ImageView
    android:id="@+id/photoItemImage"
    android:layout_width="match_parent"
    android:layout_height="237sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:contentDescription="@string/community_photo" />

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/photoItemInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8sp"
    android:layout_marginTop="10sp"
    android:layout_marginEnd="2sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/photoItemImage">

    <LinearLayout
      android:id="@+id/userInfo"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:ignore="UseCompoundDrawables">

      <ImageView
        android:id="@+id/photoItemUserProfile"
        android:layout_width="26sp"
        android:layout_height="26sp"
        android:background="@null"
        android:contentDescription="@string/user_profile" />

      <TextView
        android:id="@+id/photoItemUserName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="9sp"
        android:fontFamily="@font/pretendard_regular"
        android:gravity="center"
        android:letterSpacing="-0.08"
        android:textColor="@color/btn_float_text"
        android:textSize="12sp"
        tools:text="미미" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
      app:layout_constraintStart_toEndOf="@id/userInfo"
      android:paddingStart="100sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:id="@+id/photoItemTagList"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:orientation="horizontal"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:ignore="RtlSymmetry" />
  </androidx.constraintlayout.widget.ConstraintLayout>

  <TextView
    android:id="@+id/photoItemContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10sp"
    android:fontFamily="@font/pretendard_regular"
    android:letterSpacing="-0.08"
    android:textColor="@color/gray_9"
    android:textSize="14sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/photoItemInfo"
    tools:text="우리 강아지 너무 귀엽죠 ㅠㅠㅠ 사진이 너무 잘나와서 올려봐요!" />

</androidx.constraintlayout.widget.ConstraintLayout>